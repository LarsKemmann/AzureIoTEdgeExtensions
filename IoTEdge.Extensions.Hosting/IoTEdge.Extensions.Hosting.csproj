<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>LarsKemmann</Authors>
    <Version>1.0.0-alpha</Version>
    <PackageTags>azure iot edge dotnet</PackageTags>
    <Product>IoTEdge.Extensions.Hosting</Product>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Description>Provides extensions for Azure IoT Edge to integrate with the modern .NET hosting model, and implements IoT Edge recommendations for logging and metrics.</Description>
    <PackageProjectUrl>https://github.com/LarsKemmann/AzureIoTEdgeExtensions</PackageProjectUrl>
    <RepositoryUrl>https://github.com/LarsKemmann/AzureIoTEdgeExtensions.git</RepositoryUrl>
    <PackageReleaseNotes>1.0.0-alpha is the initial public release, providing the IHostBuilder.ConfigureIoTEdgeTelemetry() extension method and the IModuleMetrics interface.</PackageReleaseNotes>
    <RepositoryType>git</RepositoryType>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="5.0.0" />
    <PackageReference Include="prometheus-net" Version="4.0.0" />
  </ItemGroup>

</Project>
