<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>LarsKemmann</Authors>
    <Version>1.1.3-alpha</Version>
    <PackageTags>azure iot edge dotnet</PackageTags>
    <Product>IoTEdge.Extensions.Licensing</Product>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Description>Provides a licensing extension for Azure IoT Edge using the WorkSense Edge Licensing Service.</Description>
    <PackageProjectUrl>https://github.com/LarsKemmann/AzureIoTEdgeExtensions</PackageProjectUrl>
    <RepositoryUrl>https://github.com/LarsKemmann/AzureIoTEdgeExtensions.git</RepositoryUrl>
    <PackageReleaseNotes>
      1.1.0-alpha is the initial public release, providing the IHostBuilder.ConfigureIoTEdgeLicensing() extension method and a more generic IHostBuilder.ConfigureIoTEdgeLicensing&lt;T&gt;() alternative.
      1.1.1-alpha fixes a certificate file format bug on Linux.
      1.1.2-alpha adds the module assembly to the license lookup request parameters.
      1.1.3-alpha improves error logging and simplifies the module assembly name parameter.
    </PackageReleaseNotes>
    <RepositoryType>git</RepositoryType>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="IoTEdge.Extensions.Hosting" Version="1.0.2-alpha" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="5.0.0" />
    <PackageReference Include="Polly" Version="7.2.1" />
    <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="6.9.0" />
  </ItemGroup>
  
</Project>
